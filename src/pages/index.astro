    <title>Jared's Hub</title>
    <style>
      :root {
        --bg-color: #0a0a0a;
        --text-primary: #ffffff;
        --text-secondary: #a1a1aa;
        --accent: #10b981;
        --accent-glow: rgba(16, 185, 129, 0.5);
      }

      body {
        margin: 0;
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
        background-color: var(--bg-color);
        color: var(--text-primary);
        height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        overflow: hidden;
      }

      .background-glow {
        position: absolute;
        width: 800px;
        height: 800px;
        background: radial-gradient(circle, var(--accent-glow) 0%, transparent 70%);
        opacity: 0.15;
        filter: blur(80px);
        z-index: -1;
        animation: pulse 8s ease-in-out infinite;
      }

      main {
        text-align: center;
        z-index: 1;
      }

      h1 {
        font-size: 4rem;
        font-weight: 800;
        margin: 0 0 1rem 0;
        letter-spacing: -0.03em;
        background: linear-gradient(to bottom right, #fff, #ccc);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      p {
        color: var(--text-secondary);
        font-size: 1.25rem;
        margin-bottom: 3rem;
        max-width: 600px;
        line-height: 1.6;
      }

      .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        max-width: 800px;
        margin: 0 auto;
      }

      .card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        padding: 2rem;
        text-decoration: none;
        color: var(--text-primary);
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        backdrop-filter: blur(10px);
      }

      .card:hover {
        transform: translateY(-5px);
        background: rgba(255, 255, 255, 0.06);
        border-color: var(--accent);
        box-shadow: 0 10px 30px -10px var(--accent-glow);
      }

      .card-icon {
        font-size: 2rem;
        background: rgba(255, 255, 255, 0.1);
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        margin-bottom: 0.5rem;
      }

      .card h2 {
        margin: 0;
        font-size: 1.25rem;
        font-weight: 600;
      }

      .card span {
        font-size: 0.9rem;
        color: var(--text-secondary);
      }

      @keyframes pulse {
        0%, 100% { transform: scale(1); opacity: 0.15; }
        50% { transform: scale(1.1); opacity: 0.2; }
        50% { transform: scale(1.1); opacity: 0.2; }
      }

      .design-previews {
        margin-top: 4rem;
        opacity: 0.8;
      }

      .design-previews h3 {
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 2px;
        color: var(--text-secondary);
        margin-bottom: 1.5rem;
      }

      .preview-links {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
      }

      .preview-link {
        text-decoration: none;
        padding: 0.5rem 1.2rem;
        border-radius: 999px;
        font-size: 0.875rem;
        font-weight: 500;
        transition: all 0.2s;
        border: 1px solid transparent;
      }

      .preview-link.cyberpunk {
        background: rgba(0, 243, 255, 0.1);
        color: #00f3ff;
        border-color: rgba(0, 243, 255, 0.2);
      }
      .preview-link.cyberpunk:hover { background: rgba(0, 243, 255, 0.2); box-shadow: 0 0 15px rgba(0, 243, 255, 0.3); }

      .preview-link.nature {
        background: rgba(139, 168, 136, 0.1);
        color: #8ba888;
        border-color: rgba(139, 168, 136, 0.2);
      }
      .preview-link.nature:hover { background: rgba(139, 168, 136, 0.2); transform: translateY(-2px); }

      .preview-link.retro {
        background: #2c2c54;
        color: #ff5252;
        border-color: #ff5252;
        font-family: monospace;
        border-radius: 4px;
      }
      .preview-link.retro:hover { background: #40407a; box-shadow: 4px 4px 0 #000; transform: translate(-2px, -2px); }
    </style>
  </head>
