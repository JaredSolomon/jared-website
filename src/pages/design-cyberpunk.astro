    <style>
      :root {
        --bg-color: #050510;
        --text-primary: #e0faff;
        --text-secondary: #00f3ff;
        --accent: #ff00ff;
        --accent-glow: rgba(255, 0, 255, 0.6);
        --grid-color: rgba(0, 243, 255, 0.1);
      }

      body {
        margin: 0;
        font-family: 'Rajdhani', sans-serif;
        background-color: var(--bg-color);
        color: var(--text-primary);
        height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        background-image: 
          linear-gradient(var(--grid-color) 1px, transparent 1px),
          linear-gradient(90deg, var(--grid-color) 1px, transparent 1px);
        background-size: 40px 40px;
        background-position: center center;
      }

      .vignette {
        position: absolute;
        inset: 0;
        background: radial-gradient(circle, transparent 40%, #000 100%);
        pointer-events: none;
        z-index: 0;
      }

      main {
        text-align: center;
        z-index: 1;
        position: relative;
      }

      h1 {
        font-family: 'Orbitron', sans-serif;
        font-size: 5rem;
        font-weight: 900;
        margin: 0 0 1rem 0;
        text-transform: uppercase;
        color: #fff;
        text-shadow: 
          0 0 10px var(--text-secondary),
          0 0 20px var(--text-secondary),
          0 0 40px var(--text-secondary);
        animation: glitch 3s infinite;
      }

      p {
        color: var(--text-secondary);
        font-size: 1.5rem;
        margin-bottom: 4rem;
        letter-spacing: 2px;
        text-transform: uppercase;
      }

      .grid {
        display: flex;
        gap: 2rem;
        justify-content: center;
      }

      .card {
        background: rgba(0, 0, 0, 0.6);
        border: 2px solid var(--text-secondary);
        padding: 2rem 3rem;
        text-decoration: none;
        color: var(--text-primary);
        transition: all 0.2s ease;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        position: relative;
        overflow: hidden;
        clip-path: polygon(10% 0, 100% 0, 100% 90%, 90% 100%, 0 100%, 0 10%);
      }

      .card::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(0, 243, 255, 0.4), transparent);
        transition: 0.5s;
      }

      .card:hover::before {
        left: 100%;
      }

      .card:hover {
        background: rgba(0, 243, 255, 0.1);
        text-shadow: 0 0 8px var(--text-secondary);
        box-shadow: 0 0 20px var(--text-secondary);
        transform: scale(1.05);
      }

      .card-icon {
        font-size: 3rem;
        margin-bottom: 0.5rem;
        filter: drop-shadow(0 0 10px var(--accent));
      }

      .card h2 {
        margin: 0;
        font-family: 'Orbitron', sans-serif;
        font-size: 1.5rem;
        color: var(--accent);
      }

      .back-link {
        position: absolute;
        top: 2rem;
        left: 2rem;
        color: var(--text-secondary);
        text-decoration: none;
        font-family: 'Orbitron', sans-serif;
        border: 1px solid var(--text-secondary);
        padding: 0.5rem 1rem;
        text-transform: uppercase;
        font-size: 0.8rem;
        transition: all 0.3s;
      }

      .back-link:hover {
        background: var(--text-secondary);
        color: #000;
        box-shadow: 0 0 15px var(--text-secondary);
      }

      @keyframes glitch {
        0% { text-shadow: 2px 2px 0px var(--accent), -2px -2px 0px var(--text-secondary); }
        2% { text-shadow: 2px 2px 0px var(--accent), -2px -2px 0px var(--text-secondary); }
        4% { text-shadow: -2px 2px 0px var(--accent), 2px -2px 0px var(--text-secondary); }
        6% { text-shadow: 0 0 0 transparent; }
        100% { text-shadow: 0 0 0 transparent; }
      }
    </style>
  </head>
